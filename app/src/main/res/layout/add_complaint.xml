<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:layout_marginTop="70dp"

    android:orientation="vertical">
    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="-5dp"
        android:paddingBottom="50dp"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"

            app:cardBackgroundColor="#E1E3FC">

            <!-- Your content inside the CardView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Details"
                android:textColor="#180E90"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/User_registration"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/add"
                android:layout_marginRight="20dp"
                />


        </androidx.cardview.widget.CardView>


        <Spinner
            android:id="@+id/complain_Type"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/d1"

            android:layout_marginLeft="5dp"
            android:hint="              Complain Type"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="25dp" />



        <EditText
            android:id="@+id/complain_description"
            android:layout_width="335dp"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d1"
            android:hint=" Complaint Description"
            android:paddingLeft="15dp"
            android:textSize="25dp"
            android:gravity="top|start" />



        <EditText
            android:id="@+id/complain_Against"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/d1"
            android:hint="              Complaint Against"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="25dp" />

        <EditText
            android:id="@+id/incident_date"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d1"
            android:hint="              Incident_Date"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="25dp" />

        <EditText
            android:id="@+id/incident_address"
            android:layout_width="335dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d1"
            android:hint="            incident_address"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="25dp" />



        <EditText
            android:id="@+id/complain_contact_no"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/d1"
            android:hint="              Contact No"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="25dp" />





        <Spinner
            android:id="@+id/complain_station_id"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:background="@drawable/d1"
            android:layout_marginLeft="5dp"
            android:hint="              Station ID"
            android:paddingLeft="15dp"
            android:text=""
            android:textSize="25dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_border"
            android:text="Submit"
            />
    </LinearLayout>
</ScrollView>
