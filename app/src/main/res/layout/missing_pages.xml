<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"

    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Missing Person"
            android:textAlignment="center"
            android:textSize="25dp"/>
        <!--             <Button-->
        <!--                 android:id="@+id/person_btn"-->
        <!--                 android:layout_width="match_parent"-->
        <!--                 android:layout_height="wrap_content"-->
        <!--                 android:text="Person" />-->
        <!--             <Button-->
        <!--                 android:layout_toRightOf="@+id/person_btn"-->
        <!--                 android:id="@+id/vehicle_btn"-->
        <!--                 android:text="Vehicle"-->
        <!--                 android:layout_width="200dp"-->
        <!--                 android:layout_height="wrap_content"/>-->
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/missingp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/missing_person_recycle"/>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/missingv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/missing_vehicle_recycle"/>

    </LinearLayout>
</LinearLayout>
