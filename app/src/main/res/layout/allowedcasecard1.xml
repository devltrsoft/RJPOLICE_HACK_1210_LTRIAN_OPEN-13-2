<?xml version="1.0" encoding="utf-8"?>

   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:id="@+id/alloedcasecard"
    android:layout_width="350dp"
    android:layout_height="210dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:outlineSpotShadowColor="#000080"
    app:cardBackgroundColor="#E2E9FC"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp">

    <TextView
        android:id="@+id/textCaseId"
        android:textColor="#000080"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case ID: " />

    <TextView
        android:id="@+id/textCaseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000080"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:text="Victum Name: " />

    <TextView
        android:id="@+id/textCaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000080"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:text="Address: " />
    <TextView
        android:id="@+id/crime_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000080"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:text="Crime Type: " />


</androidx.cardview.widget.CardView>
</LinearLayout>