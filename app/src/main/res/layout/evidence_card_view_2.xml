<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/evidenceCard"
        android:layout_width="360dp"
        android:layout_height="202dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:outlineSpotShadowColor="#000080"
        app:cardBackgroundColor="#E2E9FC"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textEvidenceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Evidence ID: "
                android:textColor="#000080"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEvidenceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Evidence Name: "
                android:textColor="#000080"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEvidenceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Evidence Date: "
                android:textColor="#000080"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/changedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Evidence Change Date: "
                android:textColor="#000080"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>