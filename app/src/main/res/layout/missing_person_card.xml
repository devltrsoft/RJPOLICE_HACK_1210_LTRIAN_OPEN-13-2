<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/person_card"
            android:layout_width="310dp"
            android:layout_height="210dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="40dp"
            app:cardBackgroundColor="#E2E9FC"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp">

            <ImageView
                android:id="@+id/missing_person_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                  />

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="70dp"
                android:layout_marginLeft="110dp"
                android:text="Sultan I.Shaikh"
                android:textColor="#000080"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/person_desc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="100dp"
                android:layout_marginLeft="110dp"
                android:gravity="center"
                android:text="here we are going smgsdm"
                android:textColor="#000000"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginVertical="145dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:text="Location :"
                android:textColor="#000080"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginVertical="145dp"
                android:layout_marginLeft="190dp"
                android:text="Golai Latur"
                android:textColor="#000080"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/contact"

                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginVertical="165dp"
                android:layout_marginLeft="190dp"
                android:text="1234567890"
                android:textColor="#EE4319"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginVertical="165dp"
                android:gravity="center"
                android:paddingRight="40dp"
                android:text="Contact   :"
                android:textColor="#000080"
                android:textSize="16dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>