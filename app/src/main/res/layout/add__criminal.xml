<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Complaint.Add_Criminal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button"
            android:layout_width="390dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Criminal"
            android:textSize="30dp"
            android:backgroundTint="#000080"
            android:background="@drawable/d1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back_image"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"/>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/card"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="300dp"

                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/down_arrow" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:text="Suspect Details"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/caseid"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/card"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Case Id"
            android:background="@drawable/d1"/>
        <EditText
            android:id="@+id/fname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/caseid"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Full Name"
            android:background="@drawable/d1"/>


        <EditText
            android:id="@+id/address"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/fname"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Address"
            android:background="@drawable/d1"/>


        <RadioGroup
            android:layout_centerHorizontal="true"
            android:id="@+id/gender"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginTop="26dp"
            android:background="@drawable/d1"
            android:orientation="horizontal"
            android:text="Gender"
            android:textSize="25dp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Male"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="117dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="Female"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/others"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Other"
                android:textSize="18dp" />
        </RadioGroup>



        <Spinner
            android:id="@+id/country"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/gender"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:text="country"
            android:background="@drawable/d1"/>



        <Spinner
            android:id="@+id/state"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/country"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:hint="State"
            android:background="@drawable/d1"/>


        <Spinner
            android:id="@+id/district"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/state"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:text="District"
            android:background="@drawable/d1"/>



        <Spinner
            android:id="@+id/city"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/district"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:text="City"
            android:background="@drawable/d1"/>

        <EditText
            android:id="@+id/contact"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/city"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Contact"
            android:inputType="phone"
            android:background="@drawable/d1"/>

        <EditText
            android:id="@+id/dob"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/contact"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Date of Birth"
            android:background="@drawable/d1"/>


        <ImageView
            android:id="@+id/calenderImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/calendar"
            android:layout_below="@+id/contact"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="280dp"
            android:paddingLeft="15dp"
            android:hint="Date of Birth"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/dob"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Email"
            android:background="@drawable/d1"/>

        <EditText
            android:id="@+id/addhar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/email"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Addhar"
            android:inputType="number"
            android:background="@drawable/d1"/>
        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/addhar"
            android:background="@drawable/d1"
            />

        <Button
            android:id="@+id/upload"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/addhar"
            android:text="Upload"
            android:textSize="15dp"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="200dp"
            android:backgroundTint="#EE4319"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Save"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/photo"
            android:backgroundTint="#000080"/>




    </RelativeLayout>
</ScrollView>