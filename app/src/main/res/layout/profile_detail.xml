<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/police_img"
                android:layout_width="150dp"
                android:layout_height="157dp"

                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"
                android:layout_marginRight="40dp"

                android:text="Police Profile"
                android:textColor="#D83F51B5"
                android:textSize="34sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police ID"
                android:textSize="16sp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/poiceid"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                android:inputType="number"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch No"
                android:layout_below="@+id/poiceid"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/batchno"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station ID"
                android:layout_below="@+id/batchno"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/stationid"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:inputType="number"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_below="@+id/stationid"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/fname"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView5"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name"
                android:layout_below="@+id/fname"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/mname"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:inputType="text"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_below="@+id/mname"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/lname"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView7"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:layout_below="@+id/lname"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/pemail"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@+id/pemail"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/pgender"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:layout_below="@+id/pgender"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/pdob"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No"
                android:layout_below="@+id/pdob"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/mno"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alternate No"
                android:layout_below="@+id/mno"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/alno"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:inputType="number"
                />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_below="@+id/alno"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/adress"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView15"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State :"
                android:layout_below="@+id/adress"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/stateid"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView16"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District :"
                android:layout_below="@+id/stateid"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/districtid"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView17"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City :"
                android:layout_below="@+id/districtid"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/cityid"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView18"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position "
                android:layout_below="@+id/cityid"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/positionid"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police Addharno"
                android:layout_below="@+id/positionid"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:textAlignment="center"
                android:id="@+id/policeadhar"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:background="@drawable/d1"
                android:inputType="number"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>


            <ProgressBar
                android:id="@+id/p_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/policeadhar"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="20dp"
                app:backgroundTint="#222849" />

            <Button
                android:id="@+id/p_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="20dp"
                app:backgroundTint="#222849"
                android:layout_below="@id/policeadhar"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>