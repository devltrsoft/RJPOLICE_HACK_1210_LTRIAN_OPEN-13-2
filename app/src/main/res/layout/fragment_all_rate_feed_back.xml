<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/fee"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="250dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="40dp"
            app:cardBackgroundColor="#E2E9FC"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">

            <SeekBar
                android:id="@+id/satisfactionSeekBar"
                android:layout_width="190dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:rotation="270" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="250dp"
            android:layout_marginLeft="-27dp"
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="#E2E9FC"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">


            <SeekBar
                android:id="@+id/confidenceSeekBar"
                android:layout_width="190dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:rotation="270" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="#E2E9FC"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">


            <SeekBar
                android:id="@+id/qualityOfServiceSeekBar"
                android:layout_width="190dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:rotation="270" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="#E2E9FC"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">


            <SeekBar
                android:id="@+id/fairnessSeekBar"
                android:layout_width="190dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:rotation="270" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="#E2E9FC"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp">


            <SeekBar
                android:id="@+id/timeTakenSeekBar"
                android:layout_width="190dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:rotation="270" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="#E2E9FC"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <SeekBar
            android:id="@+id/Final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:max="100"
            android:layout_marginTop="10dp"
            android:rotation="0" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
