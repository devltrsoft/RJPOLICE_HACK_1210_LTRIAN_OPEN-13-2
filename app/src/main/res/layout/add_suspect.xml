<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:background="@drawable/d1"

            android:layout_width="335dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
             android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="300dp"

                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/down_arrow" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:text="Suspect Details"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>
        <Spinner
            android:id="@+id/complain_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/card"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Full Name"
            android:background="@drawable/d1"/>

        <EditText
            android:id="@+id/fname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/complain_name"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Full Name"
            android:background="@drawable/d1"/>


        <EditText
            android:id="@+id/address"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/fname"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Address"
            android:background="@drawable/d1"/>


        <RadioGroup
            android:layout_centerHorizontal="true"
            android:id="@+id/gender"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginTop="26dp"
            android:background="@drawable/d1"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:text="Gender"

            android:textSize="25dp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Male"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="117dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="Female"
                android:textSize="18dp" />


        </RadioGroup>

        <EditText
            android:id="@+id/contact"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/gender"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Contact"
            android:inputType="phone"
            android:background="@drawable/d1"/>

        <EditText
            android:id="@+id/dob"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/contact"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Date of Birth"
            android:background="@drawable/d1"/>


        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/calendar"
            android:layout_below="@+id/contact"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="280dp"
            android:paddingLeft="15dp"
            android:hint="Date of Birth"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/dob"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Email"
            android:background="@drawable/d1"/>

        <EditText
            android:id="@+id/addhar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/email"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:hint="Addhar"
            android:inputType="number"
            android:background="@drawable/d1"/>
        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/addhar"
            android:background="@drawable/d1"
            />

        <Button
            android:id="@+id/upload"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/addhar"
            android:text="Upload"
            android:textSize="15dp"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="200dp"
            android:backgroundTint="#EE4319"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="350dp"
            android:layout_height="50dp"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/photo"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/imageVieww"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="300dp"

                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/down_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Address Details"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Country"
            android:textSize="25dp"
            android:layout_below="@id/card2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="55dp"/>

        <Spinner
            android:id="@+id/country"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/card2"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="170dp"
            android:paddingLeft="15dp"
            android:text="country"
            android:background="@drawable/d1"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="State"
            android:textSize="25dp"
            android:layout_below="@id/txt1"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="55dp"/>

        <Spinner
            android:id="@+id/state"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/country"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="170dp"
            android:paddingLeft="15dp"
            android:hint="State"
            android:background="@drawable/d1"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="District"
            android:textSize="25dp"
            android:layout_below="@id/txt2"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="55dp"/>

        <Spinner
            android:id="@+id/district"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/state"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="170dp"
            android:paddingLeft="15dp"
            android:text="District"
            android:background="@drawable/d1"/>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="City"
            android:textSize="25dp"
            android:layout_below="@id/txt3"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="55dp"/>

        <Spinner
            android:id="@+id/city"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/district"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="170dp"
            android:paddingLeft="15dp"
            android:text="City"
            android:background="@drawable/d1"/>






        <Button
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Save"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/city"
            android:backgroundTint="#000080"/>




    </RelativeLayout>
</ScrollView>
