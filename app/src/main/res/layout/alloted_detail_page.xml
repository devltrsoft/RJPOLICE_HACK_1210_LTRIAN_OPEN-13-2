<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_History_Page.NotAllotedDetailPage"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Alloted Details"
            android:textColor="#180E90"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="18dp" />


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/complainid"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/textbox_boder"
        android:hint="Complaint Name"
        android:inputType="text"
        android:gravity="center"
        android:text="1032489"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/crimetype"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/textbox_boder"
        android:hint="Crime Type"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:text="Murder"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/availbalepolice"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/textbox_boder"
        android:hint="Evidence ID"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="15dp"
        tools:ignore="MissingPrefix" />


    <Button
        android:id="@+id/allotbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/d1"
        app:backgroundTint="#000080"
        android:text="Allot"
        android:textSize="15dp"
        />




</LinearLayout>