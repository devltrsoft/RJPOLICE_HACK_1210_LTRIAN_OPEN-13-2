<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/person_card"
         android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="#E2E9FC"
        android:gravity="center">

        <ImageView
             android:id="@+id/person_pic"
            android:layout_width="244dp"
            android:layout_height="134dp"
            android:layout_margin="10dp"
            />


        <TextView
            android:id="@+id/person_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="30dp"
            android:text="Phoneno: 8080228637"
            android:textColor="#403A9C"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Non_Suspect"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="225dp"
            android:backgroundTint="#EE4319"
            android:text="Non suspect"
            android:textSize="8dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>
