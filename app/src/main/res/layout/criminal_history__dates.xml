<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/card"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/toolbar2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="300dp"

                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/down_arrow" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:text="Suspect Details"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/caseid"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/card"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:text="Case Id"
            android:background="@drawable/d1"/>
        <TextView
            android:id="@+id/fname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/caseid"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:text="Full Name"
            android:background="@drawable/d1"/>


        <TextView
            android:id="@+id/address"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/fname"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:text="Address"
            android:background="@drawable/d1"/>


        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/gender"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/address"
            android:layout_marginTop="26dp"
            android:background="@drawable/d1"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:text="Gender"
            android:textSize="25dp">



        </TextView>



        <TextView
            android:id="@+id/country"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/gender"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:text="country"
            android:background="@drawable/d1"/>

        <TextView
            android:id="@+id/state"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/country"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:text="State"
            android:background="@drawable/d1"/>


        <TextView
            android:id="@+id/district"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/state"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:text="District"
            android:background="@drawable/d1"/>



        <TextView
            android:id="@+id/city"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/district"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:text="City"
            android:background="@drawable/d1"/>

        <TextView
            android:id="@+id/contact"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/city"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:text="Contact"
            android:background="@drawable/d1"/>

        <TextView
            android:id="@+id/dob"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/contact"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:text="Date of Birth"
            android:background="@drawable/d1"/>



        <TextView
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/dob"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:text="Email"
            android:background="@drawable/d1"/>

        <TextView
            android:id="@+id/addhar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/email"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:paddingLeft="15dp"
            android:text="Addhar"
            android:inputType="number"
            android:background="@drawable/d1"/>
        <ImageView
            android:id="@+id/photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/addhar"
            android:background="@drawable/d1"
            />



        <Button
            android:id="@+id/close"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Close"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/photo"
            android:backgroundTint="#000080"/>
    </RelativeLayout>
</ScrollView>
