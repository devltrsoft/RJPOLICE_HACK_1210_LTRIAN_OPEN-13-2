<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:background="@drawable/d1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Details"
            android:gravity="center"
            android:textColor="#180E90"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="15dp" />


    </androidx.cardview.widget.CardView>


    <EditText

        android:id="@+id/complain_name"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/d1"
        android:hint="Title"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/complain_description"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/d1"
        android:hint="Station ID"
        android:inputType="text"
        android:gravity="center"
        android:text=""
        android:textSize="15dp" />


    <TextView
        android:id="@+id/complain_Against"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/d1"
        android:hint="Description"
        android:inputType="text"
        android:gravity="center"
        android:text=""
        android:textSize="15dp" />

    <TextView
        android:id="@+id/incident_date"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/d1"
        android:hint="Notification type"
        android:inputType="text"
        android:gravity="center"
        android:text=""
        android:textSize="15dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
         android:background="@drawable/d1"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Upload"
        android:textColor="@color/white"
        app:backgroundTint="#EE4319"
        android:textSize="15dp" />




    </LinearLayout>
